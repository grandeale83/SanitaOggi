@page
@model SanitaOggi.Pages.Esami.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Esame</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Esame.EsameID" />
            <div class="form-group">
                <label asp-for="Esame.CodiceEsame" class="control-label"></label>
                <input asp-for="Esame.CodiceEsame" class="form-control" />
                <span asp-validation-for="Esame.CodiceEsame" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Esame.NomeEsame" class="control-label"></label>
                <input asp-for="Esame.NomeEsame" class="form-control" />
                <span asp-validation-for="Esame.NomeEsame" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Esame.NomeTipo" class="control-label"></label>
                <select asp-for="Esame.NomeTipo" asp-items="Model.NomiTipoAmbulatori" class="form-control">
                    <option value="">Seleziona Tipologia</option>
                </select>
                <span asp-validation-for="Esame.NomeTipo" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
