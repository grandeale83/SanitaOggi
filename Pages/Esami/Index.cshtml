    Layout = "~/Pages/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Esame[0].CodiceEsame)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Esame[0].NomeEsame)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Esame[0].NomeTipo)
                </th>
            <th></th>
        </tr>
