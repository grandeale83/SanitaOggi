@page
@model SanitaOggi.Pages.Ambulatori.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Ambulatorio[0].CodTipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ambulatorio[0].CodStruttura)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Ambulatorio) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodTipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodStruttura)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AmbulatorioID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AmbulatorioID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AmbulatorioID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
