@page
@model SanitaOggi.Pages.Ambulatori.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Ambulatorio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ambulatorio.Nome" class="control-label"></label>
                <input asp-for="Ambulatorio.Nome" class="form-control" />
                <span asp-validation-for="Ambulatorio.Nome" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Ambulatorio.NomeStruttura" class="control-label"></label>
                <select asp-for="Ambulatorio.NomeStruttura" asp-items="Model.NomiStrutture" class="form-control">
                    <option value="">Seleziona struttura</option>
                </select>
                <span asp-validation-for="Ambulatorio.NomeStruttura" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Ambulatorio.NomeTipo" class="control-label"></label>
                <select  asp-for="Ambulatorio.NomeTipo" asp-items="Model.NomiTipoAmbulatori" class="form-control">
                    <option value="">Seleziona Tipologia</option>
                </select>
                <span asp-validation-for="Ambulatorio.NomeTipo" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
